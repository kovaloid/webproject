<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>WebProject</display-name>

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/myoracle</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index.html</welcome-file>
        <welcome-file>default.jsp</welcome-file>
        <welcome-file>default.htm</welcome-file>
        <welcome-file>default.html</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>

    <servlet>
        <description></description>
        <display-name>Controller</display-name>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.epam.project.Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/Controller</url-pattern>
    </servlet-mapping>

    <servlet>
        <description></description>
        <display-name>Cars</display-name>
        <servlet-name>Cars</servlet-name>
        <servlet-class>com.epam.project.Cars</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Cars</servlet-name>
        <url-pattern>/Cars</url-pattern>
    </servlet-mapping>











    <servlet>
        <description>Dispatcher Servlet</description>
        <display-name>DispatcherServlet</display-name>
        <servlet-name>DispatcherServlet</servlet-name>
        <servlet-class>com.epam.project.DispatcherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DispatcherServlet</servlet-name>
        <url-pattern>/DispatcherServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>Cars Controller</description>
        <display-name>CarsController</display-name>
        <servlet-name>CarsController</servlet-name>
        <servlet-class>com.epam.project.controllers.CarsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CarsController</servlet-name>
        <url-pattern>/CarsController</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>Drivers Controller</description>
        <display-name>DriversController</display-name>
        <servlet-name>DriversController</servlet-name>
        <servlet-class>com.epam.project.controllers.DriversController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DriversController</servlet-name>
        <url-pattern>/DriversController</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>Error Controller</description>
        <display-name>ErrorController</display-name>
        <servlet-name>ErrorController</servlet-name>
        <servlet-class>com.epam.project.controllers.ErrorController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ErrorController</servlet-name>
        <url-pattern>/ErrorController</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>Journal Controller</description>
        <display-name>JournalController</display-name>
        <servlet-name>JournalController</servlet-name>
        <servlet-class>com.epam.project.controllers.JournalController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JournalController</servlet-name>
        <url-pattern>/JournalController</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>Locale Controller</description>
        <display-name>LocaleController</display-name>
        <servlet-name>LocaleController</servlet-name>
        <servlet-class>com.epam.project.controllers.LocaleController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LocaleController</servlet-name>
        <url-pattern>/LocaleController</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>Login Controller</description>
        <display-name>LoginController</display-name>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.epam.project.controllers.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>Routes Controller</description>
        <display-name>RoutesController</display-name>
        <servlet-name>RoutesController</servlet-name>
        <servlet-class>com.epam.project.controllers.RoutesController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RoutesController</servlet-name>
        <url-pattern>/RoutesController</url-pattern>
    </servlet-mapping>



    <jsp-config>
        <taglib>
            <taglib-uri>/WEB-INF/tld/taglib.tld</taglib-uri>
            <taglib-location>/WEB-INF/tld/taglib.tld</taglib-location>
        </taglib>
    </jsp-config>

</web-app>