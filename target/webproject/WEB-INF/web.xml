<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>WebProject</display-name>

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/myoracle</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index.html</welcome-file>
        <welcome-file>default.jsp</welcome-file>
        <welcome-file>default.htm</welcome-file>
        <welcome-file>default.html</welcome-file>
    </welcome-file-list>


    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>

    <error-page>
        <error-code>403</error-code>
        <location>/error/403.jsp</location>
    </error-page>

    <error-page>
        <error-code>401</error-code>
        <location>/error/401.jsp</location>
    </error-page>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/error/error.jsp</location>
    </error-page>



    <servlet>
        <description>Dispatcher Servlet</description>
        <display-name>DispatcherServlet</display-name>
        <servlet-name>DispatcherServlet</servlet-name>
        <servlet-class>com.epam.project.DispatcherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DispatcherServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CarsController</servlet-name>
        <servlet-class>com.epam.project.controllers.CarsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CarsController</servlet-name>
        <url-pattern>/CarsController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DriversController</servlet-name>
        <servlet-class>com.epam.project.controllers.DriversController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DriversController</servlet-name>
        <url-pattern>/DriversController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ErrorController</servlet-name>
        <servlet-class>com.epam.project.controllers.ErrorController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ErrorController</servlet-name>
        <url-pattern>/ErrorController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>JournalController</servlet-name>
        <servlet-class>com.epam.project.controllers.JournalController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JournalController</servlet-name>
        <url-pattern>/JournalController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LocaleController</servlet-name>
        <servlet-class>com.epam.project.controllers.LocaleController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LocaleController</servlet-name>
        <url-pattern>/LocaleController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.epam.project.controllers.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>com.epam.project.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RoutesController</servlet-name>
        <servlet-class>com.epam.project.controllers.RoutesController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RoutesController</servlet-name>
        <url-pattern>/RoutesController</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AboutPage</servlet-name>
        <jsp-file>/about.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AboutPage</servlet-name>
        <url-pattern>/about</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ContactsPage</servlet-name>
        <jsp-file>/contacts.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContactsPage</servlet-name>
        <url-pattern>/contacts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignUpPage</servlet-name>
        <jsp-file>/account/signup.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpPage</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>


    <jsp-config>
        <taglib>
            <taglib-uri>/WEB-INF/tld/taglib.tld</taglib-uri>
            <taglib-location>/WEB-INF/tld/taglib.tld</taglib-location>
        </taglib>
    </jsp-config>

</web-app>