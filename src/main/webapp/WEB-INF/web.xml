<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>WebProject</display-name>


    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/myoracle</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>


    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>


    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/errors/404.jsp</location>
    </error-page>

    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/jsp/errors/403.jsp</location>
    </error-page>

    <error-page>
        <error-code>401</error-code>
        <location>/WEB-INF/jsp/errors/401.jsp</location>
    </error-page>

    <error-page>
        <exception-type>com.epam.project.database.dao.DAOException</exception-type>
        <location>/WEB-INF/jsp/errors/exception.jsp</location>
    </error-page>


    <!--
        <error-page>
            <exception-type>java.lang.Throwable</exception-type>
            <location>/WEB-INF/jsp/errors/exception.jsp</location>
        </error-page>
    -->

    <servlet>
        <servlet-name>AboutPage</servlet-name>
        <jsp-file>/WEB-INF/jsp/info/about.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AboutPage</servlet-name>
        <url-pattern>/about</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ContactsPage</servlet-name>
        <jsp-file>/WEB-INF/jsp/info/contacts.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContactsPage</servlet-name>
        <url-pattern>/contacts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignUpPage</servlet-name>
        <jsp-file>/WEB-INF/jsp/account/signup.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpPage</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>CharsetFilter</filter-name>
        <filter-class>com.epam.project.filters.CharsetFilter</filter-class>
        <init-param>
            <param-name>charEncoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharsetFilter</filter-name>
        <url-pattern>/main</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>RequestLoggingFilter</filter-name>
        <filter-class>com.epam.project.filters.RequestLoggingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RequestLoggingFilter</filter-name>
        <url-pattern>/main</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>RequestDispatcherFilter</filter-name>
        <filter-class>com.epam.project.filters.RequestDispatcherFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RequestDispatcherFilter</filter-name>
        <url-pattern>/main</url-pattern>
    </filter-mapping>


    <jsp-config>
        <taglib>
            <taglib-uri>/WEB-INF/tld/taglib.tld</taglib-uri>
            <taglib-location>/WEB-INF/tld/taglib.tld</taglib-location>
        </taglib>
    </jsp-config>

</web-app>